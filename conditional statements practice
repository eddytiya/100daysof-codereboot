    print("the number is divisible by bboth 2 and 3")
else:
    print("no they r not")

############find the largest number from the 3 numbers 
no1 =int(input('enter the number :'))
no2 =int(input('enter the number :'))
no3 =int(input('enter the number :'))

if no1>no2 and no1>no3 :
    print(f"the largest no is {no1}")
elif no2>no1 and no2>no3 :
    print(f"the largest no is {no2}")
elif no3>no1 and no3>no1 :
    print(f"the largest no is {no3}")
else:
    print("the numbers are equal")    

