#############find the lowest number
no1 =int(input('enter the first number :'))
no2 =int(input('enter the second number :'))

if no1>no2:
    print(f"number {no2} is the lowest number")
else:
    print(f"number {no1} is the lowest number")

#############find the largest number
no1 =int(input('enter the first number :'))
no2 =int(input('enter the second number :'))

if no1>no2:
    print(f"number {no1} is the largest number")
else:
    print(f"number {no2} is the largest number")

